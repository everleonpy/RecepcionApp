<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#DADFD4"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:paddingTop="2dp"
    android:layout_margin="4dp"
    android:padding="2dp"
   >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Codigo y Descripcion -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/rcpItemCodeBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000000000000"
                    android:layout_marginLeft="4dp"
                    />
                <TextView
                    android:id="@+id/rcpItemDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COCA COLA NORAMAAL"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>

            <!-- Cantidaddes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="4dp">

                <TextView
                    android:id="@+id/rcpItemUM"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="KILOGRAMOS"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" OC : "
                    android:layout_marginLeft="4dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/rcpItemCantOC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9,999,999.99"
                    android:layout_marginLeft="4dp"
                    />

                <!-- Cantidad Recepcionada -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" RCP : "
                    android:layout_marginLeft="8dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/rcpItemCantRCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9,999,999.99"
                    android:layout_marginLeft="4dp"
                    />


            </LinearLayout>


        </LinearLayout>

</androidx.cardview.widget.CardView>